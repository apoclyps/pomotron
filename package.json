{
    "name": "pomotron",
    "version": "1.0.0",
    "description": "A Pomodoro app in your tray!",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "tk": "electron ./node_modules/electron-toolkit"
    },
    "repository": "https://github.com/mattbudde/Pomtron",
    "keywords": [
        "Electron",
        "Pomodoro",
        "Timer",
        "MenuBar"
    ],
    "author": "Matt Budde",
    "license": "CC0-1.0",
    "devDependencies": {
        "electron": "~1.7.8",
        "electron-builder": "^19.52.1",
        "electron-toolkit": "^1.0.24"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0"
    },
    "build": {
        "appId": "com.electron.pomotron",
        "copyright": "Copyright Â© 2018 Matt Budde",
        "productName": "Pomotron",
        "electronVersion": "1.7.9",
        "asar": true,
        "directories": {
            "app": "/Users/matthewbudde/pomotron",
            "output": "dist"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "public.app-category.productivity"
        }
    }
}
